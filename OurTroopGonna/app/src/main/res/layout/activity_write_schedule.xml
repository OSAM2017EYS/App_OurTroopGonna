<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.ourtroopgonna.WriteSchedule">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:hint="YYYY"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yearWrite"/>

                <EditText
                    android:hint="MM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monthWrite"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="DD"
                    android:id="@+id/dateWrite"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="HH"
                    android:id="@+id/hourWrite"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="MM"
                    android:id="@+id/minuteWrite"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Secret Level"
                    android:id="@+id/secretWrite"/>




            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="WRITER "
                android:background="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_margin="2dp"
                android:text="User Name"
                android:id="@+id/WriterName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_margin="2dp"
                android:text="Troop"
                android:id="@+id/WriterTroop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="Section"
                android:id="@+id/WriterSection"/>

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:hint="Title"
            android:id="@+id/writeTitle"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/writeCharge"
            android:layout_height="wrap_content"
            android:hint="In Charge"/>



        <EditText
            android:id="@+id/writeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:hint="Description"
            android:lines="8"
            android:inputType="textMultiLine"
            />


        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/WriterSubmit"
            android:text="submit"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
