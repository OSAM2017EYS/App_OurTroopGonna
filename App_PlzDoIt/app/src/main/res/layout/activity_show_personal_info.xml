<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.app_plzdoit.ShowPersonalInfo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Information"
            android:layout_margin="10dp"/>

        <TableLayout
            android:background="#888888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TableRow
                android:outlineProvider="background"
                android:layout_weight="1">
                <TextView
                    android:background="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Name"
                    android:layout_weight="1"/>
                <TextView
                    android:background="#ffffff"
                    android:layout_weight="5"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameInfo"
                    android:text="WAIT...."/>

            </TableRow>
            <TableRow
                android:outlineProvider="background"
                android:layout_weight="1">
                <TextView
                    android:background="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Sol. Number"
                    android:layout_weight="1"/>
                <TextView
                    android:background="#ffffff"
                    android:layout_weight="5"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/solNumInfo"
                    android:text="WAIT...."/>
            </TableRow>
            <TableRow
                android:outlineProvider="background"
                android:layout_weight="1">
                <TextView
                    android:background="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Troop"
                    android:layout_weight="1"/>
                <TextView
                    android:background="#ffffff"
                    android:layout_weight="5"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/troopInfo"
                    android:text="WAIT...."/>
            </TableRow>
            <TableRow
                android:outlineProvider="background"
                android:layout_weight="1">
                <TextView
                    android:background="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Section"
                    android:layout_weight="1"/>
                <TextView
                    android:background="#ffffff"
                    android:layout_weight="5"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WAIT...."
                    android:id="@+id/sectionInfo"/>
            </TableRow>
            <TableRow
                android:outlineProvider="background"
                android:layout_weight="1">
                <TextView
                    android:background="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Auth of Insa"
                    android:layout_weight="1"/>
                <TextView
                    android:background="#ffffff"
                    android:layout_weight="5"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adminInfo"
                    android:text="WAIT...."/>
            </TableRow>
            <TableRow
                android:outlineProvider="background"
                android:layout_weight="1">
                <TextView
                    android:background="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Secret Handleing Level"
                    android:layout_weight="1"/>
                <TextView
                    android:background="#ffffff"
                    android:layout_weight="5"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/secretInfo"
                    android:text="WAIT...."/>
            </TableRow>


        </TableLayout>

        <Button
            android:id="@+id/toSetAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give Auth / Admin (Only For Authorized User)"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
